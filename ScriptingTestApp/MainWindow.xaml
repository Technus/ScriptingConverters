<Window
  x:Class="ScriptingTestApp.MainWindow"
  x:Name="windo"
  Title="MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:ScriptingTestApp"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:script="clr-namespace:ScriptingConverters;assembly=ScriptingConverters"
  Width="800"
  Height="450"
  mc:Ignorable="d">
  <Grid>
    <TextBlock
      HorizontalAlignment="Center"
      VerticalAlignment="Center"
      Foreground="Black"
      Text="{Binding Height, ElementName=windo, Converter={script:Scripting Max((double)value`.5)+``Kek``}}" />
  </Grid>
</Window>
